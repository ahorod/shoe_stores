<div class="row">
  <div class="col-md-6">
    <h2><%= @store.name() %></h2>
    <br>
    <% if @store.brands().any?() %>
      <h4>Brands:</h4>
        <ul>
          <%@store.brands().each() do |brand|%>
            <li><%= brand.name()%></li>
          <% end %>
        </ul>
    <% end %>
  </div>
  <div class="col-md-6">
    <form action="/stores/<%= @store.id() %>" method="post">
      <input name="_method" type="hidden" value="patch">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name">
      </div>

      <h4>Brands</i></h4>
      <% @brands.each() do |brand| %>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="brand_ids[]" value="<%= brand.id() %>"><%= brand.name()%>
          </label>
        </div>
      <% end %>
      <div class="btn-group">
        <button class="btn btn-success" type="submit">Update Store</button>
      </div>
    </form>
    <br>
    <form class="float" action="/stores/<%= @store.id() %>" method="post">
      <input name="_method" type="hidden" value="delete">
      <div class="btn-group float">
        <button class="btn btn-danger" type="submit">Delete Store</button>
      </div>
    </form>
  </div>

</div>
